{{!< default}}

<main class="site-main"></main>
  {{#post}}
    <article class="single {{post_class}}">
      {{#match @page.show_title_and_feature_image}}
      <header class="single-header gh-canvas">
        <h1 class="single-title">{{title}}</h1>

        {{#if feature_image}}
        {{#unless no_image}}
        <figure class="single-media kg-width-wide">
          <div class="u-placeholder horizontal">
            <img class="u-object-fit" srcset="{{> srcset}}" sizes="(min-width: 1200px) 920px, 92vw"
              src="{{img_url feature_image size=" l"}}"
              alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
          </div>

          {{#if feature_image_caption}}
          <figcaption>{{feature_image_caption}}</figcaption>
          {{/if}}
        </figure>
        {{/unless}}
        {{/if}}
      </header>
      {{/match}}

      <div class="single-content gh-content gh-canvas">
        {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
        <div class="tags">
          {{#foreach tags}}
          <a href="{{ url }}">
            <span class="tag-feature-image" style="background-image: url('{{ feature_image }}');">
              <span class="tag-title">{{ name }} <small>({{ count.posts }})</small></span>
            <span>
          </a>
          {{/foreach}}
        </div>
        {{/get}}
      </div>

    </article>

  {{/post}}
</main>
